<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendor List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="~/css/styles.css" rel="stylesheet" type="text/css">
  </head>
  <body>
    @using OrderOrganizer.Models;

    <h1>Vendors:</h1>

    @if (@Model.Count == 0)
    {
       <h3>No Vendors have made an order yet.</h3>
    }
    @if (@Model.Count != 0)
    {
      <h5>Click vendor to add orders:</h5>
    }
    @foreach (Vendor vendor in Model)
    {
      <h3><a href="/vendors/@vendor.Name">@vendor.Name</a></h3>
    }
    <a href="/vendors/new"><button class="btn btn-primary">Add Vendor</button></a>
    <a href="/"><button class="btn btn-primary">Home</button></a>
  </body>
</html>