<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendor</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using OrderOrganizer.Models;

    <h3>Here are all the orders in this Vendor:</h3>
    @if (@Model["order"].Count == 0)
    {
       <h5>No orders have made for this vendor.</h5>
    }
    <ol>
    @foreach (Order order in @Model["order"])
    {
      <li><a href='/vendors/@Model["vendor"].Name/order/@order.OrderName'>@order.OrderDescription</a></li>
    }
    </ol>

    <a href='/vendors/@Model["vendor"].Name/order/new'><button class="btn btn-primary">Add a new order</button></a>
    <a href='/vendors'><button class="btn btn-primary">Vendor list</button></a>
    <a href="/"><button class="btn btn-primary">Home</button></a>
  </body>
</html>